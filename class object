#include<iostream>
using namespace std;
class Car
{
public:
char car_model[20];
int car_number;
char car_name[20];

void getdata()
{
cout<<"enter car number";
cin>>car_number;
cout<<"enter the model and name of the car";
cin>>car_model>>car_name;
}
void putdata()
{
cout<<"The model of the car is"<<car_model;
cout<<"The number of the car is"<<car_number;
cout<<"The name of the car is "<<car_name;
}
};
int main()
{
Car S;
S.getdata();
S.putdata();
}


#include<iostream>
using namespace std;
class Student
{
public:
int RNo;
char Sname[20];
int Contact;
char Email[30];
float SemGPA[8];
float TotalCGPA;
int i;
float sum=0;

void getData()
{
cout<<"enter the roll number and contact";
cin>>RNo>>Contact;
cout<<"enter student name and email";
cin>>Sname>>Email;
cout<<"enter gpa for each semester";
for(i=0;i<8;i++)
{
cin>>SemGPA[i];
}
}

void compute()
{
for(i=0;i<8;i++)
{
sum=sum+SemGPA[i];
}
TotalCGPA=sum/8;
}

void display()
{
cout<<"roll number of the student is"<<RNo;
cout<<"name of the student is"<<Sname;
cout<<"contact number"<<Contact;
cout<<"email is "<<Email;
cout<<"sem gpa is\n";
for (i=0;i<8;i++)
{
cout<<"sem gpa is"<<SemGPA[i];
}
cout<<" total cgpa is"<<TotalCGPA;
}
};
int main()
{
Student S;
S.getData();
S.compute();
S.display();
}

#include<iostream>
using namespace std;
class Simple
{
public:
int p,n,r,interest;
void getdata()
{
cout<<"enter principle amount";
cin>>p;
cout<<"enter rate";
cin>>r;
cout<<"number of years";
cin>>n;
}
void display()
{
interest=(p*n*r)/100;
cout<<"the simple interest is"<<interest;
}
};
int main()
{
Simple S;
S.getdata();
S.display();
}


#include<iostream>
using namespace std;
class Employee
{
public:
int empid;
char empname[40];
float basic,da,it,gross_salary,net_salary;
void getdata()
{
cout<<"enter employee id";
cin>>empid;
cout<<"enter employee name:";
cin>>empname;
cout<<"enter basic salary:";
cin>>basic;
}
void compute()
{
da=basic*0.52;
gross_salary=basic+da;
it=gross_salary*0.30;
net_salary=(basic+da)-it;
}
void display()
{
cout<<"employee details:\n";
cout<<"employee id:"<<empid<<"\n";
cout<<"employee name:"<<empname<<"\n";
cout<<"da="<<da<<"\n";
cout<<"it"<<it<<"\n";
cout<<"net salary"<<net_salary<<"\n";
}
};
int main()
{
Employee emp[100];
int n,i;
cout<<"enter max number of employee";
cin>>n;
for(i=0;i<n;i++)
{
emp[i].getdata();
}
for(i=0;i<n;i++)
{
emp[i].compute();
}
for(i=0;i<n;i++)
{
emp[i].display();
}
}
