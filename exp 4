#include <iostream>
#include <string.h>
using namespace std;

class student
{
        int sid;
        char sname[100];
        float mark;
        char grade;
        

public:
        student(int s_id, char s_name[100], float m, char g)
        {
                sid = s_id;
                strcpy(sname,s_name);
                mark = m;
                grade = g;
              
        }

        
        void show_data()
        {
                cout << "\n----------------------";
                cout << "\nstudent No. : " << sid;
                cout << "\nName : " << sname;
                cout << "\nMark : " << mark;
                cout << "\nGrade : " << grade<<"\n";
        }
};

int main()
{
        int sid;
        char name[100], grade;
        float mark;
        cout << "\n Enter Details: \n";
        cout << "-----------------------";
        cout << "\nStudent No. ";
        cin >> sid;
        cout << "\nName : ";
        cin >> name;
        cout << "\nMark : ";
        cin >> mark;
        cout << "\nGrade : ";
        cin >> grade;

        student s1(sid, name, mark, grade);
        s1.show_data();
       
        return 0;
}

